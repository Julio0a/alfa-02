<!DOCTYPE html>
<html lang="es">
<head>
  <%- include('../partials/head', { titulo: titulo }) %>
</head>
<body>
  <%- include('../partials/navbar') %>
  
  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1><%= editar ? 'Editar' : 'Nuevo' %> Servicio Adicional</h1>
      <a href="/admin/servicios" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Volver
      </a>
    </div>
    
    <%- include('../partials/mensajes') %>
    
    <div class="card">
      <div class="card-body">
        <form action="<%= editar ? `/admin/servicios/editar/${servicio.ServicioID}` : '/admin/servicios/nuevo' %>" method="POST">
          <div class="mb-3">
            <label for="nombreServicio" class="form-label">Nombre del Servicio</label>
            <input type="text" class="form-control" id="nombreServicio" name="nombreServicio" value="<%= servicio.NombreServicio || '' %>" required>
          </div>
          
          <div class="mb-3">
            <label for="precio" class="form-label">Precio (L.)</label>
            <input type="number" class="form-control" id="precio" name="precio" value="<%= servicio.Precio || '' %>" min="0" step="0.01" required>
          </div>
          
          <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <a href="/admin/servicios" class="btn btn-secondary me-md-2">Cancelar</a>
            <button type="submit" class="btn btn-primary">Guardar</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  
  <%- include('../partials/footer') %>
  <%- include('../partials/scripts') %>
</body>
</html>

