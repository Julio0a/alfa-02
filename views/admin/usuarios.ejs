<!DOCTYPE html>
<html lang="es">
<head>
  <%- include('../partials/head', { titulo: titulo }) %>
</head>
<body>
  <%- include('../partials/navbar') %>
  
  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>Gestión de Usuarios</h1>
      <a href="/admin/usuarios/nuevo" class="btn btn-primary">
        <i class="fas fa-plus"></i> Nuevo Usuario
      </a>
    </div>
    
    <%- include('../partials/mensajes') %>
    
    <div class="card">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>Nombre de Usuario</th>
                <th>Nombre Completo</th>
                <th>Correo</th>
                <th>Roles</th>
                <th>Fecha de Creación</th>
                <th>Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% if (usuarios.length === 0) { %>
                <tr>
                  <td colspan="6" class="text-center">No hay usuarios registrados</td>
                </tr>
              <% } else { %>
                <% usuarios.forEach(usuario => { %>
                  <tr>
                    <td><%= usuario.NombreUsuario %></td>
                    <td><%= usuario.PrimerNombre %> <%= usuario.PrimerApellido %></td>
                    <td><%= usuario.Correo %></td>
                    <td>
                      <% usuario.roles.forEach(rol => { %>
                        <span class="badge bg-primary"><%= rol %></span>
                      <% }) %>
                    </td>
                    <td><%= new Date(usuario.FechaCreacion).toLocaleDateString() %></td>
                    <td>
                      <a href="/admin/usuarios/editar/<%= usuario.UsuarioID %>" class="btn btn-sm btn-primary">
                        <i class="fas fa-edit"></i>
                      </a>
                    </td>
                  </tr>
                <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  
  <%- include('../partials/footer') %>
  <%- include('../partials/scripts') %>
</body>
</html>

